{
  "name": "webapp",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn tsc && react-scripts build",
    "lint": "eslint src",
    "test": "jest --watch --resetMocks -o",
    "testall": "jest --watchAll --resetMocks -o",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@react-spring/web": "^9.6.1",
    "@visx/responsive": "^3.0.0",
    "@visx/shape": "^3.0.0",
    "amazon-cognito-identity-js": "^6.1.2",
    "aws-amplify": "^5.0.8",
    "axios": "^1.3.2",
    "daisyui": "^2.46.1",
    "formik": "^2.2.9",
    "jwt-decode": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.4.3",
    "react-scripts": "^5.0.1",
    "react-toastify": "^9.1.1",
    "socket.io-client": "^4.5.4",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^15.1.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@types/cypress-cucumber-preprocessor": "^4.0.1",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-test-renderer": "^18.0.0",
    "@types/socket.io-client": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "cypress": "^12.5.1",
    "eslint": "^8.33.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "postcss": "^8.4.21",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/e2e/**/*.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@aws-amplify|@aws-crypto|@aws-sdk|aws-amplify)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
