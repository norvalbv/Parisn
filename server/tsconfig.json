{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "target": "es6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    // Interop Constraints
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Emit
    "noEmit": true
  }
}
