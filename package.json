{
  "name": "parisn",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4"
  },
  "scripts": {
    "format:check": "prettier --check webapp/src",
    "format:fix": "prettier --write webapp/src",
    "postinstall": "husky install ./.husky",
    "lint": "eslint src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "webapp/src/**/*.{ts,tsx,json,css,scss,md}": [
      "yarn format:fix",
      "yarn lint"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
